#include <dt-bindings/display/media-bus-format.h>

#include "rk3568-evb-lp4x-s1-v11.dtsi"
#include "rk3568-android.dtsi"

/{
	model = "Rockchip RK3568 LP4X SKYSI IOT V13 Board";
	compatible = "rockchip,rk3568-iot-lp4x-s1-v13-lvds", "rockchip,rk3568";

	panel {
		compatible = "simple-panel";
		backlight = <&backlight>;
		power-supply = <&vcc3v3_lcd0_n>;
		enable-delay-ms = <10>;
		prepare-delay-ms = <10>;
		unprepare-delay-ms = <20>;
		disable-delay-ms = <20>;
		init-delay-ms = <100>;
		bus-format = <MEDIA_BUS_FMT_RGB888_1X7X4_SPWG>;
		width-mm = <217>;
		height-mm = <136>;

		display-timings {
			native-mode = <&timing0>;

			timing0: timing0 {
				clock-frequency = <155232000>;
				hactive = <1920>;
				vactive = <1080>;
				hback-porch = <96>;
				hfront-porch = <120>;
				vback-porch = <16>;
				vfront-porch = <64>;
				hsync-len = <64>;
				vsync-len = <16>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <0>;
				pixelclk-active = <0>;
			};
		};

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				dual-lvds-odd-pixels;
				panel_in_lvds0: endpoint {
					remote-endpoint = <&lvds0_out_panel>;
				};
			};
			port@1 {
				reg = <1>;
				dual-lvds-even-pixels;
				panel_in_lvds1: endpoint {
					remote-endpoint = <&lvds1_out_panel>;
				};
			};
		};
	};
};

&sky_key{
	dpi = "200";
	vertical-dpi = "160";
	status = "okay";
};

&backlight {
	enable-gpios = <&gpio0 RK_PC1 GPIO_ACTIVE_HIGH>;
};

&lvds {
	status = "okay";
	dual-channel;

	ports {
		port@1 {
			reg = <1>;
			lvds0_out_panel: endpoint {
				remote-endpoint = <&panel_in_lvds0>;
			};
		};
	};
};

/* enable video phy */
&video_phy0 {
	status = "okay";
};

&video_phy1 {
	status = "okay";
};

&lvds1 {
	status = "okay";

	ports {
		port@1 {
			reg = <1>;
			lvds1_out_panel: endpoint {
				remote-endpoint = <&panel_in_lvds1>;
			};
		};
	};
};

&lvds_in_vp1 {
	status = "okay";
};

&lvds1_in_vp1 {
	status = "disabled";
};

&lvds1_in_vp2 {
	status = "okay";
};

&route_lvds {
	status = "okay";
	logo,uboot = "logo.bmp";
	logo,kernel = "logo.bmp";
};

&i2c3 {
	rk628_csi_v4l2: rk628_csi_v4l2@50 {
	    status = "okay";
	    pinctrl-0 = <&rk628_irq &rk628_det &refclk_pins>;
	};
};
